# Backend Environment Variables (Example)
# =======================================

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
# connect to your supabase postgres database
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Frontend URL Configuration
FRONTEND_URL=http://localhost:3000

# Twitter OAuth Configuration
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_REDIRECT_URI=http://localhost:4000/api/auth/twitter/callback
FRONTEND_TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# smtp Configuration for Email Service
#(Example using AWS SES, but can be any SMTP provider)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@example.com
