# ==============================================
# PROJECT CONFIGURATION
# ==============================================
NEXT_PUBLIC_PROJECT_NAME="Voxen"
NEXT_PUBLIC_URL=http://localhost:3000

# ==============================================
# API CONFIGURATION
# ==============================================
# The URL of your backend server
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================
# Network: 'testnet' or 'mainnet'
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=testnet

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Optimized Contract Address (for gas efficiency)
NEXT_PUBLIC_HASH_OPTIMIZED_CONTRACT_TESTNET=
NEXT_PUBLIC_HASH_OPTIMIZED_CONTRACT_MAINNET=

# Legacy Contract Addresses (if still used)
NEXT_PUBLIC_PROPOSAL_CONTRACT_TESTNET=
NEXT_PUBLIC_LOGGER_CONTRACT_TESTNET=
NEXT_PUBLIC_PROPOSAL_CONTRACT_MAINNET=

# ==============================================
# PROPOSAL SETTINGS
# ==============================================
# Proposal creation fee in ETH (0 for optimized contract)
NEXT_PUBLIC_PROPOSAL_CREATION_FEE=0

# ==============================================
# ONCHAINKIT API KEY
# ==============================================
# Get your API key from: https://portal.cdp.coinbase.com/products/onchainkit
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
